<h1>All the supercars, dawg!</h1>

<table class="table table-striped">
  <tr>
    <th>Make</th>
    <th>Model</th>
    <th>City</th>
    <th>Country</th>
    <th></th>
  </tr>

  <% @supercars.each do |supercar| %>
  <tr>
    <td><%= link_to supercar.make.tag_list, makes_tag_path(supercar.make.tag_list) %></td>
    <td><%= link_to supercar.car_model.tag_list, models_tag_path(supercar.car_model.tag_list) %></td>
    <td><%= link_to supercar.city.tag_list, cities_tag_path(supercar.city.tag_list) %></td>
    <td><%= link_to supercar.country.tag_list, countries_tag_path(supercar.country.tag_list) %></td>
    <td> <%= link_to 'Edit', edit_supercar_path(supercar) %> </td>

  </tr>

  <% end %>

</table>

<% @supercars.each do |supercar| %>
  <br>
		<%= link_to image_tag(supercar.img_url), "/supercars/#{supercar.id}" %>
<% end %>