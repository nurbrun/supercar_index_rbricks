<% title("New Supercar") %>
<div class="row">
  <div class="col-sm-6">
    <h1>
      New Supercar 
    </h1>
    <p><%= link_to "Back to Supercars", supercars_path %></p>

    <%= form_for [@supercar] do |f| %>

    <%= fields_for(@supercar.make) do |m| %>

    <div class="form-group">
      <%= m.label :Manufacturer %>
      <div class="row">
        <div class="col-sm-6">
          <%= m.text_field :tag_list, :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>
    <% end %>

    <%= fields_for(@supercar.car_model) do |c| %>

    <div class="form-group">
      <%= c.label :Model %>
      <div class="row">
        <div class="col-sm-6">
          <%= c.text_field :tag_list, :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>
    <% end %>
   
   <%= fields_for(@supercar.city) do |t| %>

    <div class="form-group">
      <%= t.label :City %>
      <div class="row">
        <div class="col-sm-6">
          <%= t.text_field :tag_list, :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>
    <% end %>

    <%= fields_for(@supercar.country) do |y| %>

    <div class="form-group">
      <%= y.label :Country %>
      <div class="row">
        <div class="col-sm-6">
          <%= y.text_field :tag_list, :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>
    <% end %>

      <div class="form-group">
      <%= f.label :Embeded_Instagram_Code %>
      <div class="row">
        <div class="col-sm-12">
          <%= f.text_area :img_url, :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6">
        <%= f.submit "Create Supercars", class: "btn btn-danger" %>
      </div>
    </div>

    <% end %>

  </div>
</div>
